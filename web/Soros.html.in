<script type="text/javascript" language="javascript1.3">
MAXLIST=1000
<!-- **************************************************************************************************** -->
<!--!cat ../Soros.js-->
<!-- **************************************************************************************************** -->
function convert() {
  var s = document.getElementById('number').value;
  if (s.match(/\d-/)) {
    var nums = s.split("-")
    var res = ""
    var maxi = parseInt(nums[1])
    var begin = parseInt(nums[0])
    if (maxi - begin > MAXLIST) maxi = begin + MAXLIST
    for (var i = begin; i <= maxi; i++) {
	res = res + i + "\t" + mySoros.run(i + "") + "\n"
    }
    document.getElementById('numbers').value = res;
    document.getElementById('result').value = "";
  } else { document.getElementById('result').value = mySoros.run(s); }
}
function comp() {
 mySoros = new Soros(document.getElementById('def').value);
}
function load_prg() {
	document.getElementById('def').value = document.getElementById(document.getElementById('select').value).value;
}
function copy_result() {
	document.getElementById('number').value = document.getElementById('result').value;
}
</script>
<table width="100%">
    <tr>
	<td>
	<div class='row'>
	<label for="number" accesskey="i"><u>I</u>nput:</label>
	<input type="text" title="Number (eg. 1234) or number range (1-100) or number with currency (USD 15)" id="number" onkeyup="convert();" value="1-100" />
	&nbsp;&nbsp;
	Output: <input type="button" id="result" onclick="copy_result();js();" />
	</div>	
    <tr>
	<td>
	<div class='row' id='header'>
	<label for="def" accesskey="p"><u>P</u>rogram editor</label>&nbsp;&nbsp;
	<label for="select" accesskey="l"><u>L</u>oad:</label>
	<select id="select" onchange="load_prg(); comp(); convert();">
	    <option value="xx">&ndash;</option>
<!-- **************************************************************************************************** -->
<!--!cd ../data;for i in *.sor; do name=`basename $i .sor`; echo "<option value='$name'>$name</option>"; done-->
<!-- **************************************************************************************************** -->
	</select>
	</div>
</table>
<table>
<td valign="top">
<textarea title="Program" id="def" onkeyup="comp();convert();"></textarea>
<td valign="top" align="left">
<textarea id="numbers" title="list" readonly></textarea>
</table>
