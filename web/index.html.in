function rgb(range, item, light) {
var unit = (2*Math.PI)/range;
var dark = 50-(light/2);
var r = Math.floor((Math.cos((item*unit-2.5*Math.PI))*dark+dark))+light;
var g = Math.floor((Math.cos((item*unit-Math.PI))*dark+dark))+light;
